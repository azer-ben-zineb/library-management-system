<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.libraryplus.ui.AllBooksController" spacing="8" style="-fx-padding:12;">
    <HBox spacing="8">
        <Label text="Filter:" />
        <TextField fx:id="filterField" promptText="Filter by title, author or category" HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshButton" text="Refresh" />
        <Button fx:id="chatbotButton" text="ðŸ’¬ Chatbot" onAction="#onChatbot" />
    </HBox>

    <HBox spacing="12" alignment="CENTER_LEFT" style="-fx-padding: 8;">
        <Label fx:id="bookCountLabel" text="Total Books: 0" />
        <Label fx:id="stockCountLabel" text="Total Stock: 0" />
    </HBox>

    <ScrollPane fitToWidth="true" prefViewportHeight="600">
        <TilePane fx:id="coversPane" hgap="12" vgap="12" prefColumns="6" />
    </ScrollPane>

    <Button text="Close" onAction="#onClose" />
</VBox>
