<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.libraryplus.ui.AddBookController" hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" left="20" bottom="20"/>
    </padding>

    <Label text="Add Book" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="categoryField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextArea fx:id="descriptionArea" prefRowCount="4" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Stock:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="stockField" promptText="Number of copies" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="priceField" promptText="Price (e.g., 25.99)" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel" />
        <Button fx:id="saveButton" text="Save" onAction="#onSave" />
    </HBox>

    <Label fx:id="messageLabel" GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" />
</GridPane>

